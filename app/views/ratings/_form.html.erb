<%= form_for [@book, @rating] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <label><%= t ".rating_this_book" %></label>
    <%= f.hidden_field :point, class: "form-control" %>
    <div class="area-rate">
      <%= render "shared/rating_star" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, t(".content") %>
    <%= f.text_area :content, class: "form-control", row: 20 %>
  </div>
  <%= f.submit yield(:button_text), type: :submit, class: "btn btn-primary" %>
<% end %>
