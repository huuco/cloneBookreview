<div class="review-<%= rating.id %>">
  <div class="title-rating row">
    <div class="col-md-7">
      <%= rating.title %>
    </div>
    <div class="col-md-4">
      <div class="area-view-rate">
        <%= render "ratings/star", point: rating.point %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= rating.content %>
      <% if current_user.present? && current_user.id = rating.user_id %>
        <center>
           <%= link_to t(".edit"), edit_book_rating_path(rating.book, rating),
            class: "btn btn-success btn-sm"  %>
            <%= link_to t(".delete"), book_rating_path(rating.book, rating), method::delete, data: {confirm: t(".confirm")}, class: "btn btn-danger btn-sm delete-review", remote: true, "data-reivew": rating.id %>
        </center>
      <% end %>
    </div>
  </div>
</div>
