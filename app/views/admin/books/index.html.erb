<center><h1><%= t ".list_book" %></h1></center>
<div class="col-md-10 col-md-offset-1">
  <%= form_tag admin_books_path,method: :get, id: "form-filter" do %>
    <div class="col-md-6">
      <%= text_field_tag "txt_filter_book", nil,
       class: "form-control txt_filter_book", placeholder: t(".type_something"),
        id: "txt_filter_book" %>
    </div>
    <div class="col-md-6">
      <%= select_tag :category_id,
        options_from_collection_for_select(Category.all,:id, :title,
        params[:category_id]), class: "form-control",
         include_blank: t(".show_all") %>
    </div>
  <% end %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center"><%= t ".name" %></th>
        <th scope="col" class="text-center"><%= t ".author" %></th>
        <th scope="col" class="text-center"><%= t ".category" %></th>
        <th scope="col" class="text-center"><%= t ".created_at" %></th>
        <th scope="col" class="text-center">
          <%= link_to "+", new_admin_book_path, class: "btn btn-success" %>
        </th>
      </tr>
    </thead>
    <tbody class="table-book">
      <%= render partial: "book", collection: @books, as: :book %>
    </tbody>
  </table>
  <%= paginate @books, theme: "twitter-bootstrap-3" if @books %>
</div>
